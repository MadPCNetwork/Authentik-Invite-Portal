generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserQuotaLog {
  id          String   @id @default(uuid())
  user_sub    String
  createdAt   DateTime @default(now())
  invite_uuid String
  invite_group String? // Optional: store which group was assigned

  expiresAt   DateTime?
  status      String   @default("ACTIVE") // ACTIVE, EXHAUSTED

  @@index([user_sub])
  @@index([createdAt])
  @@index([status])
}

model BulkInviteJob {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  status      String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  
  total       Int      @default(0)
  processed   Int      @default(0)
  failed      Int      @default(0)
  
  result      String?  // JSON string for details/errors

  creatorSub  String   @default("")  // Will remove default after migration or keep if lazy
}
